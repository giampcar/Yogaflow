.button {
	position:absolute;
	left:85%;
  display: inline-block;
  border-radius: 4px;
  background-color: rgb(230,227,250);
  border: none;
  color: black;
  text-align: center;
  font-size: 2vw;
  font-weight:700;
   width: 7vw;
  height: 3vw;
  margin: 1vw;
  box-shadow: 5px 5px 10px 0.1px gray;
}



.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -2vw;
}

.button:hover span {
  padding-right: 3vw;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}

