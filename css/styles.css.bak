body {
  font-size: 16px;
  background-color:  #61122f;
	font-family: 'Gentium Basic', serif;
  text-align: center;
}

/** HEADER **/
#title {
	font-family: 'Gentium Basic', serif;
  background-color: #FFFFF0;
  border-radius: 1%;
  width:90%;
  height: auto;
  margin: auto, 0, auto, 0;
  color: #61122f;
  
}

#menu-list {
	font-family: 'Gentium Basic', serif;
  background-color: #FFFFF0;
  border-radius: 1%;
  width:100%;
  height: auto;
  margin-left: 1%;
  color: #61122f;
  
}

  ul {
  list-style-type: none;
  position:relative;
  margin: 0;
  padding: 0;
}

h1 { /* Site name */
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  text-transform: uppercase;
  text-shadow: .2vw .2vw .2vw #222;
  margin-top: 0;
  margin-bottom: 0;
  -webkit-transition: all 0.5s ease-in-out;
   padding-top: 10px;
   font-size: 6vw; /* 1vw = 1% of viewport width */
  }
  
  h2 { /* menu */
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  font-size: .5vw;
  text-shadow: .1vw .1vw .1vw #222;
  margin-top: 0;
  margin-bottom: 0;
      padding-top: 10px;
    font-size: 5vw; /* 1vw = 1% of viewport width */
  }
  
  
    h3 { /* menu */
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  font-size: 2vw;
  font-weight: bold;
  margin-top: 0;
  margin-bottom: 0;

  }
  
  
  
  ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}



 #collapsable-nav a { /* Collapsed nav menu text */
    font-size: 1.1em;
  }

#title span{
  border: 0;

  margin: auto, 0, auto, 0;
        -webkit-transition: all 0.5s ease-in-out;
          transition: all 0.5s ease-out;
          transition-property: all;
          transition-duration: 0.5s;
          transition-timing-function: ease-out;
          transition-delay: 0s;
		  text-align: center;
	    font-size: 2vw; /* 1vw = 1% of viewport width */
 text-shadow: .1vw .1vw .1vw #222;	
}

 

/* END HEADER */





