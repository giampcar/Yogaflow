body {
  font-size: 16px;
  background-color:  #61122f;
	font-family: 'Gentium Basic', serif;
  text-align: center;
}

/** HEADER **/
#title {
	font-family: 'Gentium Basic', serif;
  background-color: #FFFFF0;
  width:70%;
  height: auto;
  margin: auto, 0, auto, 0;
  color: #61122f;
  padding:0px;
  }

 
  
  #sections {

  background-color: #FFFFF0;
  width:100%;
  padding:0;
  height: 30vw;
 
 
}

 
h1 { /* Site name */
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  text-transform: uppercase;
  text-shadow: .2vw .2vw .2vw #222;
  margin-top: 5vw;
  margin-bottom: 0;
  -webkit-transition: all 0.5s ease-in-out;
   padding-top: 10px;
   font-size: 7vw; /* 1vw = 1% of viewport width */
  }
  
  h2 { /* menu */
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  font-size: 3vw;
  text-shadow: .1vw .1vw .1vw #222;
  margin: 0px, 0px, 0px, 0px ;
  padding:0px, 0px, 0px, 0px;
  }
  
  
  
    #instagram, #facebook, #twitter {
  font-size: 2vw;
    color:#61122f;
}


    #github,  #linkedin {
  color:#FFFFF0;
}
  
  

#header-nav {
	background-color:#FFFFF0;
	margin:0;
	padding:0;
	
}


 #collapsable-nav a{ /* Collapsed nav menu text */
    font-size: 1vw;
	width:100%;

	margin:0;
	padding:0;
  }
  
  #collapsable-nav a:hover{ /* Collapsed nav menu text */
  	width:100%;
	background-color:#61122f;
  }
  
  #nav-list a{
	font-family: 'Gentium Basic', serif;
  color: #DABDAB;
  font-size: 2.7vw;
  text-shadow: .1vw .1vw .1vw #222;
  padding: 5px;
  }

  
  

#title p > span{
  border: 0;
  padding:0;
   font-size: 2vw;
        -webkit-transition: all 0.5s ease-in-out;
          transition: all 0.5s ease-out;
          transition-property: all;
          transition-duration: 0.5s;
          transition-timing-function: ease-out;
          transition-delay: 0s;
		  text-align: center;
	     text-shadow: .1vw .1vw .1vw #222;	
    height:1px;
}


.navbar-toggle {
    position: relative;
	bottom: 4%;
    left: 1%;
    background-color: #FFFFF0;
    background-image: none;
    border-radius: 10px;
	padding: 2%;
}

.navbar-toggle:hover {
 background-color: #61122f;
}


.navbar-toggle span{
	height: 1px;
}

.navbar {
	height: 1px;
	margin-bottom:0px;
	border:0px;
}

hr{
	margin: 0px;
	padding: 0px;
	background-color:#61122f;
	height:.2px;
	width: 90%;
	position: absolute;
	left:5%;
}

#divider{
	color: #61122f;
	  font-size: 1.2vw;
}

  h3 { /* menu */
	font-family: 'Gentium Basic', serif;
 
  font-size: 2vw;
  font-weight: bold;
  margin: 0px;
  margin: 0px;
  }


/* END HEADER */





